  <div class="container">
    <div class='row'>
      <div class="col">
        <h1>
          <%= project.name %>
        </h1>
      </div>
      <div class="col" style="text-align:right">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#">
          <i class="fas fa-trash"></i> Delete Project
        </button>
        <a href="/repository">
          <button type="button" class="btn btn-primary" style="margin-left:20px">
            back
          </button>
        </a>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col">
        <h2>Devices in the project</h2>
        <hr style="width:48%" />
      </div>
      <form action='/project/<%= project._id %>' method="POST" class="form-inline" style="width:100%">
        <div class="col">
          <!-- <input type="text" class="form-control" style="width:180%" name="deviceid" placeholder="DeviceID..."> -->
          <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle form-control" style="width:100%" name="deviceid" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              DeviceID...
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </div>
        </div>
        <div class="col" style="text-align:right"><button type="submit" class="btn btn-primary" style="margin-left:10px">Add device</button></div>
      </form>
    </div>
    <div class="row" style="margin-top:20px;">
      <div class="col">
        <table class="table table-dark table-hover">
          <thead>
            <tr>
              <th>Device Name</th>
              <th>Status</th>
              <th>Last Online</th>
              <th>State</th>
              <th>Handle</th>
            </tr>
          </thead>
          <tbody>
            <% if(devices){ %>
              <% devices.forEach(function(device){ %>
                <tr>
                  <td>
                    <%= device.name %>
                  </td>
                  <% if(device.online){ %>
                    <td>
                      <span class="badge badge-pill badge-success">Online</span>
                    </td>
                    <% }else{ %>
                      <td>
                        <span class="badge badge-pill badge-warning">Offline</span>
                      </td>
                      <% } %>
                        <td>
                          <%= device.lastOnline %>
                        </td>
                        <td>...</td>
                        <td>
                          <a class="btn btn-danger btn-sm" href="/project/<%= project._id %>">
                      Delete from project
                    </a>
                        </td>
                </tr>
                <% }); %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
