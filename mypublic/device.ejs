      <div class="col" style="margin-top:30px">
        <div class="card" style="height:300px;"> Hello World</div>
      </div>
    </div>

    <div style="height:50px"></div>
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Comfirming</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Your "DeviceKey" and "DeviceSecret" will be permanently changed.
            <br/> Are you sure you want to continue?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <a class="alink" href="/reset/device/<%= device._id %>">
              <button type="button" class="btn btn-danger">Save</button>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Warning! Deleting device</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Your
            <b>Device:
              <%= device.name %>
            </b> will be permanently deleted.
            <br/> Are you sure you want to continue?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <a class="nav-link" href="/remove/device/<%= device._id %>">
              <button type="button" class="btn btn-danger">Delete</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>


  <% include footer.ejs %>

    <script src="/mypublic/assets/js/paho-mqtt.js"></script>
    <script>
      device = <%- JSON.stringify(device) %>;
      // Create a client instance
      client = new Paho.MQTT.Client("localhost", Number('8081'), "mes" + device.deviceID);
      console.log(client);
      // set callback handlers
      client.onConnectionLost = onConnectionLost;
      client.onMessageArrived = onMessageArrived;
      // connect the client
      console.log("connecting...");
      client.connect({
        onSuccess: onConnect,
        onFailure: onFailure,
        userName: device.deviceKey,
        password: device.deviceSecret
      });

      function onFailure(err) {
        console.log("connect fail!!");
        console.log(err);
      }

      function onConnect() {
        // Once a connection has been made, make a subscription and send a message.
        console.log("onConnect");
        client.subscribe("/" + device.deviceID + "/message");
      }
      // called when the client loses its connection
      function onConnectionLost(responseObject) {
        if (responseObject.errorCode !== 0) {
          console.log("onConnectionLost:" + responseObject.errorMessage);
        }
      }

      // called when a message arrives
      function onMessageArrived(message) {
        console.log(message.destinationName);
        console.log("onMessageArrived:" + message.payloadString);
        var elm = '<div style="padding:10px">' +
          '<div class="card" style="width: 15rem;padding:10px;background:grey;">' +
          '<h4 class="card-title">DEVICE:</h4>' +
          '<p class="card-text">' + message.payloadString + '</p>' +
          '</div>' +
          '</div>'
        $(elm).appendTo(document.getElementById("chatbox"));
      }

    </script>

    <script>
      $('#messageForm').submit(function(e) {
        e.preventDefault();
        var form = document.getElementById("messageForm");
        var payload = document.getElementById("textMessage").value;
        form.reset();
        var message = new Paho.MQTT.Message(payload);
        message.destinationName = "/" + device.deviceID + "/";
        client.send(message);
        var elm = '<div style="padding:10px;padding-left:670px">' +
          '<div class="card" style="width: 25rem;padding:10px;background:#87CEEB;">' +
          '<h4 class="card-title">USER:</h4>' +
          '<p class="card-text">' + payload + '</p>' +
          '</div>' +
          '</div>'
        $(elm).appendTo(document.getElementById("chatbox"));
      });

    </script>
