<style>
  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
<div class="modal fade" id="myDeviceModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create New Device</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="createDeviceForm" action="/createdevice" method="POST">
          <div class="form-group">
            <label>Device name:</label>
            <input name="deviceName" type="text" class="form-control" placeholder="" required>
          </div>
          <div class="form-group">
            <label>Description:</label>
            <textarea name="desc" class="form-control"></textarea>
          </div>
          <label>Add external data:</label>
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" name="weatherCheck" type="checkbox" value="true"> Weather
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" name="geoWaterCheck" type="checkbox" value="true" data-toggle="collapse" data-target="#geoWater"> Geolocation (Water)
            </label>
            <div class="collapse" id="geoWater">
              <input name="geoWaterVal" type="number" class="form-control" placeholder="example 5 metres">
            </div>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" name="geoRoadCheck" type="checkbox" value="true" data-toggle="collapse" data-target="#geoRoad"> Geolocation (Road)
            </label>
            <div class='collapse' id="geoRoad">
              <input name="geoRoadVal" type="number" class="form-control" placeholder="example 5 metres">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" form="createDeviceForm" class="btn btn-primary">
      </div>
    </div>
  </div>
</div>